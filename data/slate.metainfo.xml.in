<component type="desktop-application">
  <id>io.github.wpkelso.slate</id>
  <launchable type="desktop-id">io.github.wpkelso.slate.desktop</launchable>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0</project_license>

  <name>Slate</name>
  <summary>The text editor that's dumb as rocks!</summary>
  <description>
    <p>
        Slate is a simple, lightweight plain text editor.
    </p>
    <ul>
      <li>Make new files!</li>
      <li>Open files!</li>
      <li>Edit files!</li>
      <li>Files get autosaved!</li>
      <li>Save files under new names!</li>
      <li>Close files!</li>
    </ul>
  </description>

  <screenshots>
    <screenshot type="default" environment="pantheon">
      <image>https://raw.githubusercontent.com/wpkelso/slate/1.0.1/data/screenshot-light.png</image>
    </screenshot>
    <screenshot environment="pantheon:dark">
      <image>https://raw.githubusercontent.com/wpkelso/slate/1.0.1/data/screenshot-dark.png</image>
    </screenshot>
  </screenshots>

  <branding>
    <color type="primary">#485a6c</color>
  </branding>
  <custom>
    <value key="x-appcenter-color-primary">#485a6c</value>
  </custom>

  <content_rating type="oars-1.1" />

  <provides>
      <binary>io.github.wpkelso.slate</binary>
  </provides>

  <recommends>
    <display_length compare="ge">300</display_length>
  </recommends>
  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </supports>

  <url type="homepage">https://github.com/wpkelso/slate</url>
  <url type="bugtracker">https://github.com/wpkelso/slate/issues</url>

  <developer id="io.github.wpkelso">
    <name>William Kelso</name>
  </developer>

  <releases>
    <release version="1.1.1" date="2025-06-30" urgency="medium">
      <description>
        <p>Fixes small issues for AppCenter release</p>
      </description>
    </release>

    <release version="1.1.0" date="2025-06-30" urgency="medium">
      <description>
        <p>Smoothing rough edges and removing sharp points</p>
        <ul>
          <li>Added German, French, and Spanish translations</li>
          <li>Added keyboard accelerators for actions</li>
          <li>Unsaved documents are now kept until explicitly cleared, and re-opened when the application is launched</li>
          <li>File location is now shown when hovering the headerbar</li>
          <li>Restricted attempts to open documents to only valid text files</li>
          <li>Added plaintext mimetype to desktop file</li>
        </ul>
      </description>
    </release>

    <release version="1.0.1" date="2025-05-08" urgency="medium">
      <description>
        <p>Various small fixes for AppCenter release</p>
        <ul>
          <li>Remove copy-paste error from metainfo</li>
          <li>Update screenshots</li>
          <li>Remove unecessary containers for the headerbar</li>
          <li>Remove xdg-documents sandbox permission</li>
        </ul>
      </description>
    </release>

    <release version="1.0.0" date="2025-05-07" urgency="medium">
      <description>
        <p>Initial release!</p>
      </description>
    </release>

  </releases>
</component>
